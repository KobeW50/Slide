<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/settings_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backup_local_title"
            style="@style/TextAppearance.AppCompat.Title"/>

        <Button
            android:id="@+id/local_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_button"/>

        <Button
            android:id="@+id/local_restore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restore_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/backup_drive_title"
            style="@style/TextAppearance.AppCompat.Title"/>

        <Button
            android:id="@+id/drive_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_button"/>

        <Button
            android:id="@+id/drive_restore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restore_button"/>

    </LinearLayout>
</LinearLayout>
